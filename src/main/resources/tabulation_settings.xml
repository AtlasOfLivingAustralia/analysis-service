<tabulation>
    <!-- must be postgres db

             Assumption: this is the one and only postgres/postgis database for tabulation
        -->
    <db_connection_string>jdbc:postgresql://localhost:5432/spatialdb</db_connection_string>
    <db_username>Postgres</db_username>
    <db_password>postgres</db_password>


    <!--
        1. (optional) SOURCE_TABLE with either:
                - LONGITUDE_FIELD and LATITUDE_FIELD source or
                - point type the_geom field
           This table operated upon with a WHERE clause like KEY_FIELD='TARGET_VALUE'.

           TARGET_VALUE is in function call as string.

           ADDITIONAL_FIELDS may exist and may requested for returning.

           Notes:
                - if not included only functions with lng/lat inputs will work.
                - initially required for testing - a restructure could drop this section
        -->
    <source_table>
        <source_table_name>ozcamdata</source_table_name>

        <point_type>false</point_type>

        <!-- following unnecessary if point_type is true -->
        <longitude_field>longitude</longitude_field>
        <latitude_field>latitude</latitude_field>

        <!-- info for constructing WHERE clause in the query -->
        <key_field>species</key_field>

        <!-- encapsulate the value supplied to the select query allowing for
                     insertion of some operations and alternation between string and
                     number types.
                -->
        <key_value_prefix>'</key_value_prefix>
        <key_value_postfix>'</key_value_postfix>

        <!-- definition of available fields in the SOURCE_TABLE for return -->
                <!--
                <additional_fields>
                        <additional_field>
                                <additional_field_name>family</additional_field_name>
                                <additional_field_display_name>family</additional_field_display_name>
                        </additional_field>
                </additional_fields>
                -->
    </source_table>

