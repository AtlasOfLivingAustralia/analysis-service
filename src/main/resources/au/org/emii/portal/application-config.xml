<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- enable aspect j -->
    <aop:aspectj-autoproxy>
        <aop:include name="checkNotNullAspect"/>
        <aop:include name="logSetterValueAspect" />
    </aop:aspectj-autoproxy>

    <!-- substitutde JVM args with ${varname} -->
    <context:property-placeholder />



    <!-- Xml Web Service processor - Jersey implementation -->
    <bean id="xmlWebService" class="au.org.emii.portal.webservice.XmlWebServiceJerseyImpl" scope="prototype">
        <property name="settings" ref="settings" />
    </bean>


    <!-- User Info Service - for looking up user details (name, address, etc) -->
    <bean   id="userInfoService" factory-bean="masterServiceFactory"
            factory-method="createUserInfoService"  scope="prototype"  />

    <!-- Login Service - for logging a user into the portal -->
    <bean   id="portalUserLoginService" factory-bean="masterServiceFactory"
            factory-method="createPortalUserLoginService" scope="prototype"  />

    <!-- Registration Service - for registering users with the mest -->
    <bean   id="registrationService" factory-bean="masterServiceFactory"
            factory-method="createRegistrationService"  scope="prototype"  />

    <!-- Logout service -->
    <bean   id="logoutService" class="au.org.emii.portal.authentication.LogoutServiceImpl" />

    <!-- forgotten password -->
    <bean   id="forgottenPasswordService" factory-bean="masterServiceFactory"
            factory-method="createForgottenPasswordService"  scope="prototype"  />

    <!-- admin console login service -->
    <bean   id="adminConsoleLoginService" factory-bean="masterServiceFactory"
            factory-method="createAdminConsoleLoginService" scope="prototype"  />

    <!-- 
    Aspect to check a setter is not setting a null value
    -->
    <bean id="checkNotNullAspect" class="au.org.emii.portal.aspect.CheckNotNullAspect" />

    <!-- 
    Aspect to log the value set by a setter
    -->
    <bean id="logSetterValueAspect" class="au.org.emii.portal.aspect.LogSetterValueAspect" />

    <!--
    Main settings from config file
    -->
    <bean id="settings" class="au.org.emii.portal.config.SettingsImpl" />


    <!--
    Additional key/value pair values from config file
    -->
    <bean id="settingsSupplementary" class="au.org.emii.portal.config.SettingsSupplementaryImpl" />
    
    <!--
    Class for resolving hostname
    -->
    <bean id="resolveHostName" class="au.org.emii.portal.config.ResolveHostNameImpl" />

    <!--
    Language strings and icon names
    -->
    <bean id="languagePack" class="au.org.emii.portal.lang.LanguagePackImpl" />

    <!--
    Support for reading and changing the portal name
    -->
    <bean id="portalNaming" class="au.org.emii.portal.config.PortalNamingImpl" />

    <!--
    Bean for reloading log4j configuration, eg after a name change
    -->
    <bean id="log4jLoader" class="au.org.emii.portal.web.Log4jLoader" />

    <!--
    Bean to update the portal name in the .properties file and reload the log4j
    configuration
    -->
    <bean id="portalNamingUpdater" class="au.org.emii.portal.config.PortalNamingUpdaterImpl" />

    <!--
    List of iso countries - used for registration system.
    -->
    <bean id="isoCountries" class="au.org.emii.portal.config.IsoCountriesImpl">
        <property name="settings" value="#{settings}" />
    </bean>

    <bean id="uriResolver" class="au.org.emii.portal.util.UriResolverImpl" />

    <bean id="configurationLoaderStage1" class="au.org.emii.portal.config.ConfigurationLoaderStage1">
        <property name="configurationFile" ref="configurationFile" />
        <property name="settings" ref="settings" />
        <property name="stage2" ref="configurationLoaderStage2" />
        <property name="portalSessionUtilities" ref="portalSessionUtilities" />
    </bean>

    <bean id="configurationLoaderStage2" class="au.org.emii.portal.config.ConfigurationLoaderStage2">
        <property name="uriResolver" ref="uriResolver" />
        <property name="remoteMap" ref="remoteMap" />
        <property name="httpAuthenticateProxy" ref="httpAuthenticateProxy" />
        <property name="settings" ref="settings" />
        <property name="settingsSupplementary" ref="settingsSupplementary" />
        <property name="mestSearchKeywords" ref="mestSearchKeywords" />
        <property name="layerGroupFactory" ref="layerGroupFactory" />
        <property name="portalSessionUtilities" ref="portalSessionUtilities" />
        <property name="masterServiceFactory" ref="masterServiceFactory" />
        <property name="mestServiceFactory" ref="mestServiceFactory" />
        <property name="propertiesServiceFactory" ref="propertiesServiceFactory" />
        <property name="searchCatalogueFactory" ref="searchCatalogueFactory" />
        <property name="mestConfigurationFactory" ref="mestConfigurationFactory" />
    </bean>

    <bean id="layerUtilities" class="au.org.emii.portal.LayerUtilitiesImpl">
        <property name="settings" ref="settings" />
        <property name="settingsSupplementary" ref="settingsSupplementary" />
        <property name="resolveHostname" ref="resolveHostName" />
    </bean>



    <bean id="configurationFile" class="au.org.emii.portal.config.ConfigurationFile">
        <property name="filename" value="${WEBPORTAL_CONFIG_FILE}" />
    </bean>

    <!--
    Example of how to read (a string) from settingsSupplementary
    <property name="animationHeight" value="#{settingsSupplementary.values['animation_height']}" />
    -->

    <bean id="imageTester" class="au.org.emii.portal.ImageTesterImpl">
        <property name="languagePack" ref="languagePack" />
        <property name="layerUtilities" ref="layerUtilities" />
        <property name="httpConnection" ref="httpConnection" />
    </bean>

    <bean id="remoteMap" class="au.org.emii.portal.RemoteMapImpl">
        <property name="uriResolver" ref="uriResolver" />
        <property name="languagePack" ref="languagePack" />
        <property name="layerUtilities" ref="layerUtilities" />
        <property name="imageTester" ref="imageTester" />
        <property name="genericServiceAndBaseLayerSupport" ref="genericServiceAndBaseLayerSupport" />
    </bean>

    <bean id="openLayersJavascript" class="au.org.emii.portal.OpenLayersJavascriptImpl">
        <property name="settingsSupplementary" ref="settingsSupplementary" />
        <property name="layerUtilities" ref="layerUtilities" />
    </bean>

    <bean id="remoteRequestServlet" class="au.org.emii.portal.servlet.RemoteRequestServlet">
        <property name="settings" ref="settings" />
    </bean>

    <bean id="httpConnection" class="au.org.emii.portal.HttpConnectionImpl">
        <property name="settings" ref="settings" />
    </bean>

    <bean id="mestSearchKeywords" class="au.org.emii.portal.mest.MestSearchKeywordsImpl">
        <property name="httpConnection" ref="httpConnection" />
    </bean>

    <bean id="httpAuthenticateProxy" class="au.org.emii.portal.HttpAuthenticateProxy">
        <property name="settings" ref="settings" />
    </bean>

    <bean id="propertiesWriter" class="au.org.emii.portal.config.PropertiesWriterImpl">
        <property name="languagePack" ref="languagePack" />
    </bean>

    <bean id="genericServiceAndBaseLayerSupport" class="au.org.emii.portal.wms.GenericServiceAndBaseLayerSupport">
        <property name="layerUtilities" ref="layerUtilities" />
        <property name="uriResolver" ref="uriResolver" />
    </bean>

    <bean id="wmsSupport" class="au.org.emii.portal.wms.WMSSupport" abstract="true">
        <property name="layerUtilities" ref="layerUtilities" />
        <property name="languagePack" ref="languagePack" />
        <property name="uriResolver" ref="uriResolver" />
        <property name="httpConnection" ref="httpConnection" />
    </bean>


    <bean id="wMSSupport_1_3_0" class="au.org.emii.portal.wms.WMSSupport_1_3_0" parent="wmsSupport" />
    <bean id="wMSSupport_1_1_1" class="au.org.emii.portal.wms.WMSSupport_1_1_1" parent="wmsSupport" />
    <bean id="wMSSupport_1_1_0" class="au.org.emii.portal.wms.WMSSupport_1_1_0" parent="wmsSupport" />
    <bean id="wMSSupport_1_0_0" class="au.org.emii.portal.wms.WMSSupport_1_0_0" parent="wmsSupport" />
    <bean id="ncWMSSupport" class="au.org.emii.portal.wms.NcWMSSupport" parent="wmsSupport" />
    <bean id="threddsSupport" class="au.org.emii.portal.wms.ThreddsSupport" parent="wmsSupport" />

    <bean id="motd" class="au.org.emii.portal.motd.MOTDImpl">
        <property name="propertiesWriter" ref="propertiesWriter" />
    </bean>

    <bean id="mapLayerItemRenderer" class="au.org.emii.portal.databinding.MapLayerItemRenderer">
        <property name="languagePack" ref="languagePack" />
        <property name="layerUtilities" ref="layerUtilities" />
    </bean>

    <bean id="activeLayerRenderer" class="au.org.emii.portal.databinding.ActiveLayerRenderer" >
        <property name="languagePack" ref="languagePack" />
        <property name="layerUtilities" ref="layerUtilities" />
        <property name="visibilityToggleEventListener" ref="visibilityToggleEventListener" />
    </bean>

    <bean id="visibilityToggleEventListener" class="au.org.emii.portal.event.VisibilityToggleEventListener">
        <property name="openLayersJavascript" ref="openLayersJavascript" />
    </bean>

    <bean id="searchCatalogueFactory" class="au.org.emii.portal.SearchCatalogFactoryImpl">
        <property name="uriResolver" ref="uriResolver" />
        <property name="settings" ref="settings" />
        <lookup-method name="createSearchCatalogueInstance" bean="searchCatalogue"/>
    </bean>

    <bean id="searchCatalogue" class="au.org.emii.portal.SearchCatalogueImpl" />
    

    <bean id="listUtilities" class="au.org.emii.portal.util.ListUtilities" />

    <bean id="portalSessionUtilities" class="au.org.emii.portal.util.PortalSessionUtilities">
        <property name="languagePack" ref="languagePack" />
        <property name="listUtilities" ref="listUtilities" />
        <property name="settingsSupplementary" ref="settingsSupplementary" />
    </bean>

    <bean id="portalSessionCloner" class="au.org.emii.portal.util.PortalSessionCloner">
        <property name="portalSessionUtilities" ref="portalSessionUtilities" />
    </bean>

    <bean id="layerGroupFactory" class="au.org.emii.portal.util.LayerGroupFactory">
        <property name="portalSessionUtilities" ref="portalSessionUtilities" />
    </bean>

    <bean id="masterServiceFactory" class="au.org.emii.portal.service.MasterServiceFactoryImpl" />
    <bean id="mestServiceFactory" class="au.org.emii.portal.service.MestServiceFactory">
        <lookup-method name="createXmlWebService" bean="xmlWebService"/>
    </bean>
    <bean id="propertiesServiceFactory" class="au.org.emii.portal.service.PropertiesServiceFactory" />

    <bean id="mestConfigurationFactory" class="au.org.emii.portal.mest.MestConfigurationFactoryImpl">
        <lookup-method name="createInstance" bean="mestConfiguration" />
    </bean>

    <bean id="mestConfiguration" class="au.org.emii.portal.mest.MestConfigurationImpl" scope="prototype" />

</beans>