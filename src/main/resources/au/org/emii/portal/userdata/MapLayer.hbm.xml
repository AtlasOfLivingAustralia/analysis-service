<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="userdata">
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="au.org.emii.portal.MapLayer" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
    <id name="mapLayerId" type="long">
      <column name="mapLayerId"/>
      <generator class="sequence">
      	<param name="sequence">userdata_id_seq</param>
	  </generator>
    </id>
    <property name="currentlyAnimated" type="boolean">
      <column name="currentlyAnimated"/>
    </property>
    <property name="defaultStyleLegendUriSet" type="boolean">
      <column name="defaultStyleLegendUriSet"/>
    </property>
    <property name="displayed" type="boolean">
      <column name="displayed"/>
    </property>
    <property name="baseLayer" type="boolean">
      <column name="baseLayer"/>
    </property>
    <property name="displayable" type="boolean">
      <column name="displayable"/>
    </property>
    <property name="listedInActiveLayers" type="boolean">
      <column name="listedInActiveLayers"/>
    </property>
    <property name="queryable" type="boolean">
      <column name="queryable"/>
    </property>
    <property name="cql" type="string">
      <column name="cql"/>
    </property>
    <property name="uri" type="string">
      <column name="uri"/>
    </property>
    <property name="layer" type="string">
      <column name="layer"/>
    </property>
    <property name="imageFormat" type="string">
      <column name="imageFormat"/>
    </property>
    <property name="type" type="int">
      <column name="type"/>
    </property>
    <property name="selectedStyleIndex" type="int">
      <column name="selectedStyleIndex"/>
    </property>
    <many-to-one class="au.org.emii.portal.MapLayer" column="parentId" name="parent"/>
    <bag cascade="all" name="children" inverse="true" >
      <key column="id"/>
      <one-to-many class="au.org.emii.portal.MapLayer"/>
    </bag>
    
    <property name="opacity" type="float">
      <column name="opacity"/>
    </property>
  </class>
</hibernate-mapping>
